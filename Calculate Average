package com.fst.demo;

import java.util.Scanner;

public class CalculateAverage {
	
	 public static void main(String[] args) {
	        // Create a Scanner object to read input
	        Scanner scanner = new Scanner(System.in);

	        // Prompt the user to enter the first floating-point number
	        System.out.print("Enter the first floating-point number: ");
	        double number1 = scanner.nextDouble();

	        // Prompt the user to enter the second floating-point number
	        System.out.print("Enter the second floating-point number: ");
	        double number2 = scanner.nextDouble();

	        // Calculate the average
	        double average = (number1 + number2) / 2;

	        // Display the average with two decimal places
	        System.out.printf("The average of %.2f and %.2f is %.2f\n", number1, number2, average);

	        // Close the Scanner to avoid resource leak
	        scanner.close();
	    }

}



Output:
Enter the first floating-point number: 43
Enter the second floating-point number: 24
The average of 43.00 and 24.00 is 33.50
